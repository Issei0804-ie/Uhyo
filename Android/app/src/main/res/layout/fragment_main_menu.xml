<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/MainMenu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Othello"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/MainMenu_onlinePlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.366"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/MainMenu_soloPlay"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:text="ひとり"
        app:layout_constraintBottom_toTopOf="@+id/MainMenu_onlinePlay"
        app:layout_constraintEnd_toStartOf="@+id/MainMenu_duoPlay"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MainMenu_duoPlay"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:text="ふたり"
        app:layout_constraintBottom_toTopOf="@+id/MainMenu_onlinePlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/MainMenu_soloPlay" />

    <Button
        android:id="@+id/MainMenu_onlinePlay"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="124dp"
        android:text="オンライン対戦"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/MainMenu_duoPlay"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/MainMenu_soloPlay" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="オセロのルール"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/MainMenu_onlinePlay"
        app:layout_constraintTop_toBottomOf="@+id/MainMenu_onlinePlay"
        app:layout_constraintVertical_bias="0.21" />


</androidx.constraintlayout.widget.ConstraintLayout>